<view class="{{memberLevel == 4 ? 'neillo': 'other'}}" wx:if="{{isSuccess}}">
  <view class="content">
    <view class="{{memberLevel == 4 ? 'neilloLevel': 'otherLevel'}}">
      {{levelText}}
    </view>
    <view class='body'>
      <text class='nicName'>{{name}}</text>
      <view class="barCode">
        <canvas canvas-id="barcode" />
        <text class="phone">{{mobile || '***********'}}</text>
      </view>
      <view class="qrCode">
        <canvas canvas-id="qrcode" />
      </view>
      <text class="tip">会员二维码</text>
    </view>
  </view>
</view>