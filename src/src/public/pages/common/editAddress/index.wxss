page {
  height: 100%;
  background: #fff;
}


.address {
  width: 100%;
  height: 180rpx;
  background: #fff;
  border-top: 20rpx solid #efeff4;
}

.addAddress {
  height: 100%;
  background: #efeff4;
}

.form {
  padding-left: 20rpx;
  border-top: 20rpx solid #efeff4;
  background: #fff;
  font-size: 28rpx;
  color: #000;
}

.form view {
  display: -webkit-box;
  display: -webkit-flex;
  display: -moz-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  -moz-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  width: 730rpx;
  min-height: 88rpx;
  border-bottom: 1rpx solid #e8e8e8;
}

.form label {
  width: 156rpx;
}

.form input {
  width: 550rpx;
  text-align: left;
}

.defaultAddress {
  position: relative;
}

.isDefaultAddress {
  position: absolute;
  right: 20rpx;
  z-index: 10;
}

.save {
  width: 670rpx;
  height: 94rpx;
  margin: 61rpx auto;
  background: #FF5390;
  border-radius: 10rpx;
  font-size: 36rpx;
  color: #FFFFFF;
}

.deleteAddress {
  border: #d7d7d7;
  background: transparent;
  color: #000;
}

.disableButton {
  opacity: .4;
}

.citypicker {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 500rpx;
  background: #fff;
  white-space: nowrap;
  font-size: 26rpx;
  text-align: center;
}

.citybody {
  position: fixed;
  bottom: 0px;
  width: 100%;
  height: 400rpx;
}

.cityheader {
  position: absolute;
  top: 0px;
  width: 100%;
  height: 60rpx;
  z-index: 4;
}

.city-cancel {
  float: left;
  margin: 20rpx;
  color: #818181;
}

.city-true {
  float: right;
  margin: 20rpx;
  color: #2FB42E
}

.section .picker {
  background-color: #fff;
  border-bottom: 1px #d9d9d9 solid;
  border-top: 1px #d9d9d9 solid;
  padding: 20rpx;
}

.clear {
  margin-right: 10rpx;
}