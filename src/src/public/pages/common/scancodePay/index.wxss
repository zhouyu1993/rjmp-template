page {
    background: #fff;
  }

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0 75rpx;
}

.barcode {
    width: 600rpx;
    height: 160rpx;
    margin-top:120rpx;
}

.qrcode {
    margin-top: 80rpx;
    width: 320rpx;
    height: 320rpx;
}
.offscreen {position: absolute; top:-9999rpx;}

.paycode {
    margin-top: 20rpx;
    font-size: 30rpx;
    color: #121212;
    text-align: center;
    line-height: 30rpx;
    letter-spacing: 10rpx;
}

.tip {
    margin-top: 30rpx;
    font-size: 28rpx;
    color: #999999;
    text-align: center;
    line-height: 28rpx;
}

.bottom {
    margin-top: 188rpx;
    width: 100%;
    display: flex;
    justify-content: space-around;
}
.bottom .item {
    display: flex;
    flex-direction: row;
}
.countrow {
    display: flex;
    flex-direction: column;
}
.remain {
    display: flex;
    flex-direction: row;
    align-items: center;
    flex-wrap: nowrap;
    margin-top: 20rpx;
}
.count {
    font-size: 24rpx;
    color: #000000;
    line-height: 24rpx;
    display: flex;
    margin-left: 10rpx;
}
.txt1 {
    font-size: 30rpx;
    color: #121212;
    line-height: 30rpx;
    display: flex;
}
.txt2 {
    font-size: 24rpx;
    color: #666666;
    line-height: 24rpx;
    display: flex;
}
.minus {
    margin-top: 14rpx;
    font-size: 22rpx;
    color: #FF6EA2;
    line-height: 22rpx;
}

.cbox {
    margin-right: 20rpx;
    position:relative;
    top:-4rpx;
}
.disabled {
    opacity: .3;
}
.c-normal, .c-active {
    width: 36rpx;
    height: 36rpx;
}

.pwdPanel {
    width: 100%;
    height: 832rpx;
    position:fixed;
    bottom: -832rpx;   
    left: 0;
    display:flex;
    flex-direction: column;
    align-items:center;
    background: #fff;
    transition: all .5s ease;
    border-top: 2rpx solid #E7E7E7;
}

.pwdPanel.open {
    bottom: 0; 
}

.input-tip {
    width: 100%;
    position: relative;
    display: flex;
    height: 100rpx;
    border-bottom: 1rpx solid #E7E7E7;
    justify-content: center;
    align-items: center;
}

.input-tip text {
    font-size: 32rpx;
    color: #121212;
    line-height: 32rpx;
}

.input-tip image {
    position: absolute;
    width: 32rpx;
    height: 32rpx;
    top:30rpx;
    right:30rpx;
}

.input-area {
    margin: 80rpx 0;
    width: 690rpx;
    height: 90rpx;
    border: 1rpx solid #AAAAAA;
    border-radius: 4rpx;
    display: flex;
}

.input-area text{
    height: 100%;
    display: flex;
    flex: 1;
    justify-content: center;
    align-items: center;
    border-right: 1rpx solid #AAAAAA;
    font-size: 42rpx;
    color: #121212;
}
.input-area text:nth-last-child(1){
    border-right: none;
}

.numbers {
    width: 100%;
    display:flex;
    flex-direction: column;
}
.row {
    display:flex;
    height: 120rpx;
    border-top: 1rpx solid #AAAAAA;
}
.row text,.row view {
    flex:1;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 52rpx;
    color: #121212;
}
.row view:nth-child(2) {
    border-left: 1rpx solid #AAAAAA;
    border-right: 1rpx solid #AAAAAA;
}
.del {
    width:45rpx;
    height: 32rpx;
}
.hover {
    background: #f4f4f4;
}