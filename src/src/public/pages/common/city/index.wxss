page{
  background: #fff;
}
.scrollView {
  height: 1136rpx;
  font-size: 26rpx;
  overflow: hidden;
}

.top {
  background: #efeff4;
}

.topPanel {
  margin-left: 10rpx;
}

.topPanel text {
  display: block;
  color: #999;
  font-size: 28rpx;
  padding: 40rpx 10rpx 10rpx 10rpx;
}

.topPanel view {
  display: inline-block;
  width: 210rpx;
  height: 80rpx;
  margin: 10rpx;
  line-height: 80rpx;
  text-align: center;
  background: #fff;
  border: 0rpx;
}

.city {
  display: block;
  height: 88rpx;
  margin: 0rpx 0rpx 0rpx 20rpx;
  border-bottom: 1rpx solid #e5e5e5;
  font-size: 30rpx;
  color: #000;
  line-height: 88rpx;
}
.city:last-child{
  border-bottom: 0rpx;
}

.split {
  display: block;
  width: 100%;
  height: 75rpx;
  line-height: 75rpx;
  text-indent: 20rpx;
  background: #efeff4;
}

.letter {
  position: fixed;
  top: 150rpx;
  right: 0rpx;
  width: 60rpx;
  text-align: center;
  font-size: 20rpx;
  color: #555554;
}
.letter view {
  width:100%;
}

.letterHot {
  margin: 6rpx 0 0 10rpx !important;
  white-space: nowrap;
}
.letter text {
  display: block;
  text-align: center;
  margin: 6rpx 0 0 25rpx;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
}
.selectedLetter{
  background: #FF397E;
  border-radius: 100%;
  color:#ffffff;
}
